{
  "name": "rent-hub-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test:docker": "docker-compose -f ../docker-compose.yml  up -d postgres-test  && npx jest --detectOpenHandles",
    "test:podman": "/usr/bin/podman-compose -f ../docker-compose.yml up -d postgres-test && npx jest --detectOpenHandles",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --detectOpenHandles --watch",
    "start": "tsnd --poll --respawn --transpile-only ./src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typeorm": "npx typeorm-ts-node-commonjs -d ./migrations/",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration-run": "npm run typeorm migration:run --datasource ./src/migrations/init",
    "migration:revert": "npm run typeorm  migration:revert"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx,html,css,scss}": "prettier -v-write ",
    "./src/**/*.{ts,tsx}": "eslint "
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "argon2": "^0.31.2",
    "axios": "^1.6.2",
    "class-validator": "^0.14.0",
    "cookie": "^0.6.0",
    "cookies": "^0.9.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^2.0.0-beta.3",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cookies": "^0.7.10",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.9",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0"
  }
}
